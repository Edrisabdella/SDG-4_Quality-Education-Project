{
  "version": 2,
  "name": "openlearn-frontend",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://openlearn-backend.onrender.com"
  },
  "build": {
    "env": {
      "VITE_API_URL": "https://openlearn-backend.onrender.com"
    }
  }
}